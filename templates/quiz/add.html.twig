{% extends 'base.html.twig' %}

{% block body %}

    {% if app.user %}
        <h3>Ajouter un Quiz</h3>

        {{ form_start(formQuiz) }}

        {{ form_row(formQuiz.title, {'attr': {'placeholder': 'Titre du Quiz'}}) }}

        <button type="submit" class="btn btn-success">Ajouter un Quiz</button>

        {{ form_end(formQuiz) }}

    {% else %}
        <h3>Page invalide !</h3>
    {% endif %}

{% endblock %}